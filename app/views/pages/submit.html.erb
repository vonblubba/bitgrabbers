                <!-- content -->
                <div class="content">
                    <% flash.each do |key, value| %>
                        <div class="alert alert-<%= key %>"><%= value %></div>
                     <% end %>
                    <!-- column-image  -->
                    <div class="column-image">
                        <div class="bg"  data-bg="images/bg/1.jpg"></div>
                        <div class="overlay"></div>
                        <div class="column-title">
                            <h2>Send us your best shots!</h2>
                            <h3>Got a screenshot you're particularly fond of and want to have it featured on Bitgrabbers? Great, you're in the right place!</h3>
                        </div>
                        <div class="column-notifer">
                            <div class="scroll-down-wrap transparent_sdw">
                                <div class="mousey">
                                    <div class="scroller"></div>
                                </div>
                                <span>Scroll down  to Discover</span>
                            </div>
                        </div>
                        <div class="fixed-column-dec"></div>
                    </div>
                    <!-- column-image end  -->
                    <!-- column-wrapper -->
                    <div class="column-wrapper ">
                        <!--section -->
                        <section id="sec3">
                            <div class="container small-container">
                                <div class="section-title fl-wrap">
                                    <h3>Submit your screenshot</h3>
                                    <h4>Only one screenshot at a time, please.</h4>
                                    <div class="section-number">03.</div>
                                </div>
                                <div class="column-wrapper_item fl-wrap">
                                    <div class="column-wrapper_text fl-wrap">
                                        <div id="contact-form" class="fl-wrap">
                                            <div id="message"></div>
                                            <%= form_with model: @submission, :url => {:controller => 'submissions', :action => 'create'}, class: "custom-form" do |form| %>
                                                <fieldset>
                                                    <%= form.text_field :email, placeholder: "Email Address *" %>
                                                    <%= form.text_field :game, placeholder: "What game is your shot from?" %>
                                                    <%= form.file_field :image, :class => 'btn float-btn flat-btn color-bg' %>
                                                    <br>
                                                    <%= form.submit "Send", :class => 'btn float-btn flat-btn color-bg', placeholder: "Pick your shot *" %>
                                                </fieldset>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <!--section end  -->
                        <!--footer -->
                        <footer class="min-footer fl-wrap content-animvisible">
                            <div class="container small-container">
                                <div class="footer-inner fl-wrap">
                                    <!-- policy-box-->
                                    <div class="policy-box">
                                        <span>&#169; Bitgrabbers <%= Time.current.year %>  /  All rights reserved. </span>
                                    </div>
                                    <!-- policy-box end-->
                                    <a href="#" class="to-top-btn to-top">Back to top <i class="fal fa-long-arrow-up"></i></a>
                                </div>
                            </div>
                        </footer>
                        <!--footer end  -->
                    </div>
                    <!-- column-wrapper -->
                </div>
                <!--content end-->
