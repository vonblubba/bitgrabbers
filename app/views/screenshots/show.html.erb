                            </div>
                        </div>
                        <!--home-main_title end-->
                        <div class="slider-mask"></div>
                        <!--bg image-->
                        <div class="bg" data-bg="<%= @screenshot.image.low_quality.url %>"></div>
                        <div class="overlay"></div>
                        <!--bg image end-->
                    </div>
                    <!--home-main_container end-->
                </div>
                <!--content end-->
