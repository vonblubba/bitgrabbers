                <!-- content -->
                <div class="content full-height">
                    <!--home-main_container-->
                    <div class="home-main_container">
                        <!--follow-wrap-->
                        <div class="follow-wrap">
                            <div class="follow-wrap_title">
                                <span>Follow</span> <i class="fal fa-arrow-right"></i>
                            </div>
                            <div class="clearfix"></div>
                            <ul>
                                <li><a href="#" target="_blank" title="facebook"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#" target="_blank" title="instagram"><i class="fab fa-instagram"></i></a></li>
                                <li><a href="#" target="_blank" title="twitter"><i class="fab fa-twitter"></i></a></li>
                            </ul>
                        </div>
                        <!--follow-wrap end-->
                        <!--hero-decor-let-->
                        <div class="hero-decor-let">
                            <% @screenshot.tag_list.each_with_index do |tag, index| %>
                                <div><%= (index + 1) %>. <span><%= tag %></span></div>
                            <% end %>
                        </div>
                        <!--hero-decor-let end-->
